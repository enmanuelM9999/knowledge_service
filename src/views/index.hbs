<div class="card">

  <div class="card-header bg-light">
    <h3 class="card-title text-dark">
      <i class="far fa-image"></i> New post
    </h3>
  </div>

  <div class="card-body">
    <form action="/images" method="POST" enctype="multipart/form-data">

      <div class="form-group">
        <div class="input-group">
          <div class="custom-file">
            <input type="file" name="image" class="custom-file-input" id="inputGroupFile" aria-describedby="inputGroupFileAddon" required/>
            <label class="custom-file-label" for="inputGroupFile">Choose file</label>
          </div>
        </div>
      </div>

      <div class="form-group">
        <input type="text" name="title" class="form-control" placeholder="Title for the post" required>
      </div>
      <div class="form-group">
        <textarea name="description" rows="2" class="form-control" placeholder="Type a long text here" required></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-success">
          <i class="fa fa-upload"></i> Upload my post
        </button>
      </div>
    </form>
  </div>
</div>

<div class="card mt-2">
  <div class="card-header bg-light">
    <h3><i class="far fa-images"></i> Recent posts</h3>
  </div>
  <div class="card-body">
    <div class="row">
      {{#each images}}
      <div class="col-md-4 text-center">
        <a href="/images/{{ this._id }}">
          <img src="/public/upload/{{this.filename}}" alt="{{this.title}}" class="w-100 h-100 img-thumbnail">
        </a>
      </div>
      {{/each}}
    </div>
  </div>
</div>
